<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('includes/head.ejs') %>
        <link rel="stylesheet" href="/css/forms.css" />
        <link rel="stylesheet" href="/css/login.css" />
        <script src="/js/validation.js" defer></script>
        <title><%= title %></title>
    </head>
    <body>
        <%- include('includes/header.ejs', {active: active}) %>
        <main class="main">
            <section class="login">
                <form class="form" action="/login" method="POST" novalidate>
                    <label class="form__label" for="username">Username</label>
                    <p class="form__error"></p>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        class="form__input"
                        placeholder="Johnny1"
                        minlength="3"
                        maxlength="20"
                        pattern="[A-Za-z0-9]{3,20}"
                        required
                    />
                    <div class="password-separator">
                        <label class="form__label" for="password">Password</label>
                        <a href="/register" class="form__additional-link">Forgot password?</a>
                    </div>
                    <p class="form__error"></p>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form__input"
                        placeholder="••••••"
                        minlength="6"
                        maxlength="30"
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{6,30}$"
                        required
                    />
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit" class="button button--small">Login</button>
                </form>
                <a href="/register" class="form__additional-link form__additional-link--login">Create an account</a>
            </section>
        </main>
        <%- include('includes/footer.ejs') %>
    </body>
</html>
